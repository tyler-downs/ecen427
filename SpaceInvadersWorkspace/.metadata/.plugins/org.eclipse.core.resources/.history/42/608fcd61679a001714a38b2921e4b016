#include "sharedGlobals.h"

extern u8 hour_btn = 0; //left
extern u8 min_btn = 0; //center
extern u8 sec_btn = 0; //right
extern u8 up_btn = 0; //up
extern u8 down_btn = 0; //down

extern u8 hour = HOUR_MAX; //current hour
extern u8 min = MIN_SEC_MAX; //current minute
extern u8 sec = 45; //current second

u8 incSec() //increments seconds, returns true if rolls over
{
	if (sec >= MIN_SEC_MAX)
	{
		sec = 0;
		return TRUE;
	}
	else
	{
		sec++;
		return FALSE;
	}
}

u8 incMin() //increments minutes, returns true if rolls over
{
	if (min >= MIN_SEC_MAX)
	{
		min = 0;
		return TRUE;
	}
	else
	{
		min++;
		return FALSE;
	}
}

void incHour() //increments the hour
{
	if (hour >= HOUR_MAX)
		hour = 0;
	else
		hour++;
}

